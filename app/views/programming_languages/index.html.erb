<p style="color: green"><%= notice %></p>

<div class="page-header d-flex justify-content-between align-items-center">
  <h1>Programming Languages</h1>
  <%= link_to "Add New Language", new_programming_language_path, class: "btn btn-primary" %>
</div>

<div class="row">
  <% @programming_languages.each do |language| %>
    <div class="col-md-6 col-lg-4">
      <div class="card programming-language-card h-100">
        <div class="card-body">
          <h5 class="card-title language-title"><%= language.title %></h5>
          <p class="card-text language-description"><%= truncate(language.description, length: 100) %></p>
          <div class="d-flex justify-content-between">
            <div>
              <%= link_to "View", language, class: "btn btn-sm btn-outline-primary btn-action" %>
              <%= link_to "Edit", edit_programming_language_path(language), class: "btn btn-sm btn-outline-secondary btn-action" %>
            </div>
            <%= button_to "Delete", language, method: :delete, 
                    class: "btn btn-sm btn-outline-danger", 
                    form: { data: { turbo_confirm: 'Are you sure?' } } %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
